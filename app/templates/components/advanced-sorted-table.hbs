<!-- //BEGIN-SNIPPET advanced-sorted-table -->
{{#data-sorter data=data sorter=customSorter as |ds|}}
  {{#data-table data=ds.data selectionMode='multi' selectionChanged=(action 'selectionChanged') classNames=tableClassNames as |t|}}
    {{t.selectionColumn}}
    {{t.sortableColumn propertyName='name' name="Name" sortinformationupdated=(action ds.onsortfieldupdated)}}
    {{t.column propertyName='surname' name='Surname'}}
    {{#t.sortableColumn propertyName='position' name='Position' sortinformationupdated=(action ds.onsortfieldupdated) as |sc|}}
      {{#if sc.header}}
        {{sortable-position-header onsortinfoupdate=(action sc.onsortinfoupdate)}}
      {{/if}}
      {{#if sc.body}}
        {{sc.row.position}}
      {{/if}}
    {{/t.sortableColumn}}
    {{t.column propertyName='team' name='Team'}}
  {{/data-table}}
{{/data-sorter}}
<!-- // END-SNIPPET -->