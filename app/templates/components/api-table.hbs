{{#data-table data=data classNames=tableClassNames as |t|}}
  {{#t.column defaultHeader=true name="Option" as |col|}}
    <code>{{col.row.option}}</code>
  {{/t.column}}
  {{#t.column defaultHeader=true name="Type" as |col|}}
    <i>{{col.row.type}}</i>
  {{/t.column}}
  {{#t.column defaultHeader=true name="Description" as |col|}}
    {{{col.row.description}}}
  {{/t.column}}
{{/data-table}}